# Lighthouse Configuration
LIGHTHOUSE_API_KEY=your_lighthouse_api_key_here

# MongoDB Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGO_DB_NAME=medai_secure_storage

# Flask Configuration
FLASK_SECRET_KEY=your_secret_key_here
MAX_FILE_SIZE_MB=16

# Security Settings
ENABLE_BLOCKCHAIN_STORAGE=true
ENABLE_MONGODB_BACKUP=true

# IPFS Gateway Configuration
IPFS_GATEWAY_URL=https://gateway.lighthouse.storage/ipfs/

# Model Configuration
MODEL_VERSION=v1.0

# Production Settings
DEBUG=false
FLASK_ENV=production

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# Rate Limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# CORS Settings (comma-separated URLs)
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Render specific - will be set automatically
PORT=5000
